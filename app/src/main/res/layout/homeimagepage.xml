<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"> <!-- Black background for the entire layout -->

    <!-- First Row of Images -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="#000000"
            android:elevation="4dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Image 1"
                android:scaleType="centerCrop"
                android:src="@drawable/cloud1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="#000000"
            android:elevation="4dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Image 2"
                android:scaleType="centerCrop"
                android:src="@drawable/cloud2" />
        </LinearLayout>
    </LinearLayout>

    <!-- Second Row of Images -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="#000000"
            android:elevation="4dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cloud3"
                android:contentDescription="Image 3"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="#000000"
            android:elevation="4dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Image 4"
                android:scaleType="centerCrop"
                android:src="@drawable/cloud4" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#000"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="🏠"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="🔍"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />


        <Button
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="➕"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="👤"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>
