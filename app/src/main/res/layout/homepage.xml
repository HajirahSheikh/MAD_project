<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EB7D"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".homeC">

    <!-- Navbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <Button
            android:id="@+id/watch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch"
            android:layout_marginStart="20dp"
            android:textColor="#333"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@drawable/white_button" /> <!-- Use custom drawable -->

<!--        <Button-->
<!--            android:id="@+id/explore_button"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Explore"-->
<!--            android:layout_marginStart="20dp"-->
<!--            android:textColor="#333"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="12sp"-->
<!--            android:background="@drawable/white_button2" /> &lt;!&ndash; Use custom drawable &ndash;&gt;-->



        <Button
            android:id="@+id/login_button"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:text="LogIn"
            android:textColor="#E60025"
            android:textSize="11sp"
            android:padding="8dp"
            android:gravity="center" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="SignUp"
            android:textColor="#E60025"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <!-- Image Section (Left) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/cake" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="263dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/pasta" />

            <ImageView
                android:layout_width="192dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/macs" />
        </LinearLayout>

        <!-- Text Section (Right) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search for an idea"
                android:textColor="#c62157"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What do you want to try next? Think of something you're into, or like and see what you find."
                android:textColor="#333"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/explore_button"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/rounded_button"
                android:text="Explore"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:padding="8dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
